{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/((?!assets/|favicon.ico|placeholder.svg|robots.txt).*)",
            "destination": "/index.html"
        }
    ],
    "buildCommand": "npm run build:client",
    "outputDirectory": "dist/spa",
    "framework": "vite"
}